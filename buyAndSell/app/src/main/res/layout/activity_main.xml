<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:id="@+id/mainActivity"
    android:background="@color/white"
    tools:context=".MainActivity"
    android:fitsSystemWindows="true">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="User Name:"
        android:textColor="@color/black"
        android:id="@+id/textView"
        android:textStyle="bold"
        android:typeface="serif"
        android:layout_below="@+id/imageView"
        android:layout_marginTop="120dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Password:"
        android:textColor="@color/black"
        android:id="@+id/textView2"
        android:textStyle="bold"
        android:typeface="serif"
        android:layout_below="@+id/textView"
        android:layout_marginTop="40dp"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:id="@+id/editText"
        android:width="200dp"
        android:background="@drawable/rounded_edit_text"
        android:layout_toRightOf="@+id/textView"
        android:layout_alignBaseline="@+id/textView"
        android:layout_marginLeft="10dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:inputType="textPassword"
        android:width="200dp"
        android:id="@+id/editText2"
        android:background="@drawable/rounded_edit_text"
        android:layout_toRightOf="@id/textView2"
        android:layout_alignBaseline="@id/textView2"
        android:layout_marginLeft="25dp"
        />

    <Button
        android:background="@drawable/shadow2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="Register"
        android:id="@+id/button"
        android:width="120dp"
        android:onClick="registerButtonPressed"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="30dp"/>

    <Button
        android:background="@drawable/shadow2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:textColor="@color/black"
        android:id="@+id/button2"
        android:width="120dp"
        android:onClick="loginButtonPressed"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="185dp"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@mipmap/ic1"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/img1"
        android:src="@mipmap/logo_bright"
        android:scaleX="-1"/>
    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginLeft="30dp"
        android:id="@+id/img2"
        android:src="@mipmap/logo_bright"
        android:scaleY="-1"
        android:layout_below="@+id/img1"/>
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@mipmap/logo_bright"
        android:id="@+id/img3"
        android:layout_below="@+id/img2"/>
    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@mipmap/logo_bright"
        android:id="@+id/img4"
        android:layout_below="@+id/img2"
        android:scaleY="-1"
        android:scaleX="-1"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="20dp"/>
    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/img5"
        android:src="@mipmap/logo_bright"
        android:layout_toRightOf="@+id/imageView"
        android:layout_marginLeft="10dp"
        android:rotation="100"/>
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/img6"
        android:src="@mipmap/logo_bright"
        android:layout_below="@+id/img5"
        android:layout_toRightOf="@id/imageView"/>
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/img7"
        android:src="@mipmap/logo_bright"
        android:layout_below="@id/imageView"
        android:layout_toRightOf="@id/img4"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="-15dp"
        android:rotation="45"/>
    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/img8"
        android:src="@mipmap/logo_bright"
        android:layout_below="@+id/img5"
        android:layout_alignParentRight="true"
        android:layout_marginTop="70dp"
        android:layout_marginRight="20dp"
        android:scaleY="-1"/>
    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/img9"
        android:src="@mipmap/logo_bright"
        android:layout_below="@+id/img3"
        android:rotation="225"
        android:layout_marginTop="30dp"/>
    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/img10"
        android:src="@mipmap/logo_bright"
        android:layout_below="@+id/img5"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/img6"
        android:rotation="180"/>
    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/img11"
        android:src="@mipmap/logo_bright"
        android:layout_marginLeft="100dp"
        android:rotation="180"/>
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/img12"
        android:src="@mipmap/logo_bright"
        android:layout_below="@id/img7"
        android:layout_toRightOf="@id/img4"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:rotation="135"/>
    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/img13"
        android:src="@mipmap/logo_bright"
        android:layout_above="@+id/button"
        android:layout_marginBottom="-70dp"/>
    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/img14"
        android:src="@mipmap/logo_bright"
        android:layout_toRightOf="@+id/img13"
        android:layout_above="@+id/button"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="-90dp"
        android:rotation="180"/>
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/img15"
        android:src="@mipmap/logo_bright"
        android:layout_above="@+id/button2"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="-60dp"
        android:layout_marginRight="20dp"
        android:rotation="90"/>
    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/img16"
        android:src="@mipmap/logo_bright"
        android:layout_above="@+id/button2"
        android:layout_toRightOf="@+id/img14"
        android:layout_toLeftOf="@+id/img15"
        android:layout_marginBottom="-80dp"
        android:rotation="-90" />
    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/img17"
        android:src="@mipmap/logo_bright"
        android:layout_alignBaseline="@+id/button"
        android:layout_marginLeft="2dp"
        android:rotation="45"/>
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/img18"
        android:src="@mipmap/logo_bright"
        android:layout_alignBaseline="@+id/button2"
        android:layout_toRightOf="@+id/button2"
        android:layout_marginLeft="10dp"
        android:rotation="-135"/>
    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/img19"
        android:src="@mipmap/logo_bright"
        android:layout_below="@+id/button"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="5dp"
        android:rotation="135"/>
    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/img20"
        android:src="@mipmap/logo_bright"
        android:layout_below="@+id/button2"
        android:layout_toLeftOf="@+id/img18"
        android:rotation="-45"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp"/>
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/img21"
        android:src="@mipmap/logo_bright"
        android:layout_toLeftOf="@+id/img20"
        android:layout_toRightOf="@id/img19"
        android:layout_below="@id/button"
        android:rotation="45"/>


</RelativeLayout>
